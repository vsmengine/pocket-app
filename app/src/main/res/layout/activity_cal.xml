<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/answer_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Welcome to calculator page"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/input_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="phone"
        android:padding="5dp"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@id/answer_cal"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/num_1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="1"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_cal" />
    <Button
        android:id="@+id/num_2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="4dp"
        android:text="2"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@id/num_1"
        app:layout_constraintTop_toBottomOf="@id/input_cal" />
    <Button
        android:id="@+id/num_3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="4dp"
        android:text="3"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@id/num_2"
        app:layout_constraintTop_toBottomOf="@id/input_cal" />
    <Button
        android:id="@+id/num_4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="4dp"
        android:text="4"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@id/num_3"
        app:layout_constraintTop_toBottomOf="@id/input_cal" />
    <Button
        android:id="@+id/num_5"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="4dp"
        android:text="5"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@id/num_4"
        app:layout_constraintTop_toBottomOf="@id/input_cal" />
    <Button
        android:id="@+id/num_6"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="4dp"
        android:text="6"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@id/num_5"
        app:layout_constraintTop_toBottomOf="@id/input_cal" />

    <Button
        android:id="@+id/num_7"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:text="7"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_2" />

    <Button
        android:id="@+id/num_8"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="4dp"
        android:text="8"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_3" />

    <Button
        android:id="@+id/num_9"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="4dp"
        android:text="9"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_3" />


    <Button
        android:id="@+id/plus"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="184dp"
        android:layout_marginTop="4dp"
        android:text="+"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_4" />
    <Button
        android:id="@+id/minus"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="4dp"
        android:text="-"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_5" />
    <Button
        android:id="@+id/multiply"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="304dp"
        android:layout_marginTop="4dp"
        android:text="*"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_6" />

    <Button
        android:id="@+id/divide"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:text="/"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_7" />


    <Button
        android:id="@+id/equal"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="4dp"
        android:text="="
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_8" />

    <Button
        android:id="@+id/reset"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="4dp"
        android:text="CE"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num_9" />

    <Button
        android:id="@+id/floatPoint"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="184dp"
        android:layout_marginTop="4dp"
        android:text="."
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus" />


</androidx.constraintlayout.widget.ConstraintLayout>
