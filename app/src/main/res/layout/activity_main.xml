<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_calculator"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/btn_calculator_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/btn_blank"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/btn_blank_name"
        app:layout_constraintTop_toBottomOf="@id/btn_calculator"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/btn_contacts"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/btn_contacts_name"
        app:layout_constraintTop_toBottomOf="@id/btn_blank"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>